<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <bean id="render" class="ru.itis.example.renders.MessageRenderLovelyImpl">
       <constructor-arg ref="message"/>
   </bean>

    <bean id="message" class="ru.itis.example.messages.MessageByeImpl"/>

    <bean id="customMessage" class="ru.itis.example.messages.CustomMessage" scope="singleton">
        <property name="message" value="HELLO FROM CONTEXT"/>
    </bean>


</beans>